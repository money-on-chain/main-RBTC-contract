    "eslint": "6.0.1",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-mocha": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "ethlint": "1.2.4",
    "flat": "4.1.0",
    "ganache-cli": "6.4.5",
    "mocha": "6.2.0",
    "openzeppelin-test-helpers": "0.4.0",
