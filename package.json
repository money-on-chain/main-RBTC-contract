    "openzeppelin-eth": "2.1.3",
    "openzeppelin-solidity": "2.3.0",
    "zos": "2.3.1",
    "zos-lib": "2.3.1"
  },
  "devDependencies": {
    "abi-decoder": "1.2.0",
    "babel-eslint": "10.0.2",
    "bignumber.js": "9.0.0",
    "bn-chai": "1.0.1",
